<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/show1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bluescreen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="欢迎使用"
            android:id="@+id/title"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff0b18c0" />

       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线程读取第一个设备的RSSI"
        android:id="@+id/RSSIbutton1"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff1919c0"
           android:layout_marginTop="@dimen/activity_horizontal_margin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线程读取第二个设备的RSSI"
        android:id="@+id/RSSIbutton2"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff1919c0"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
       />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程读取第三个设备的RSSI"
            android:id="@+id/RssiThread"
            android:layout_gravity="center_horizontal"
             android:textColor="#ff1919c0"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="线程读取全部设备的RSSI"
            android:id="@+id/allRssiThread"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff1919c0"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接1"
                android:id="@+id/connect1"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff1919c0"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接2"
                android:id="@+id/connect2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff1919c0"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="连接3"
                android:id="@+id/connect3"
                android:layout_gravity="center_horizontal"
                android:textColor="#ff1919c0"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
